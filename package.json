{
    "name": "@open-cluster-management/search-ui",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "JEST_JUNIT_OUTPUT_DIR=coverage react-scripts test --all --watchAll=false --ci --coverage --reporters=default --reporters=jest-junit --coverageReporters=lcov --coverageReporters=html --coverageReporters=text --coverageReporters=text-summary --collectCoverageFrom=!**/*.d.ts",
        "test:watch": "react-scripts test --watch",
        "lint": "eslint --ext tsx src",
        "generate": "graphql-codegen --config src/console-sdk/console-sdk.yml",
        "update": "rm -rf package-lock.json node_modules && npx npm-check-updates -u && npm install && npm audit fix && npm dedup && npm test && npm run lint && npm run check",
        "docker:build": "docker build -t search .",
        "docker:run": "docker run --rm -p 5000:5000 search"
    },
    "dependencies": {
        "@apollo/client": "^3.2.2",
        "@open-cluster-management/ui-components": "^0.1.12",
        "@patternfly/react-core": "^4.63.3",
        "@types/node": "^12.12.65",
        "@types/react": "^16.9.51",
        "@types/react-dom": "^16.9.8",
        "graphql": "^15.3.0",
        "graphql-tag": "^2.11.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.3",
        "typescript": "^3.7.5"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^1.17.10",
        "@graphql-codegen/introspection": "^1.18.0",
        "@graphql-codegen/typescript": "^1.17.10",
        "@graphql-codegen/typescript-operations": "^1.17.8",
        "@graphql-codegen/typescript-react-apollo": "^2.0.7",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^24.9.1",
        "jest-junit": "^12.0.0",
        "prettier": "^2.1.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
